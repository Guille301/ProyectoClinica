@model DTOs.Paciente.FichaPacienteDto

@{
    ViewData["Title"] = "ObtenerFichaPaciente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body class="body-detail">
    <h2 class="title-detail">Detalles del paciente</h2>
    <section class="detail-section">
        <div class="top-h">
            <div class="detail-content-container">
                Nombre completo:
                <span>@Html.DisplayFor(model => model.NombreCompleto)</span>
            </div>
            <div class="detail-content-container">
                Número de identificación:
                <span>@Html.DisplayFor(model => model.NumeroDocumento)</span>
            </div>
        </div>
        <div class="middle-h">
            <div class="detail-content-container">
                Número de teléfono:
                <span>@Html.DisplayFor(model => model.Telefono)</span>
            </div>
            <div class="detail-content-container">
                Dirección:
                <span>@Html.DisplayFor(model => model.Direccion)</span>
            </div>
        </div>
        
    </section>
</body>
</html>

@if(Model.idHistorialClinico == 0)
{
    <p>No hay historiales clinicos</p>
    @Html.ActionLink("Crear historial clinico", "Create", "HistoriaClinica", new { PacienteId = Model.idPaciente })
    ;
}
else
{
    <div>
        <h4>Historial Clínico</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MotivoDeConsulta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MotivoDeConsulta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermedadActual)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermedadActual)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Antecedentes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Antecedentes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HabitosPSB)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HabitosPSB)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExamenFisico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExamenFisico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnostico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnostico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExameneLaboratorio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExameneLaboratorio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tratamiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tratamiento)
            </dd>
        </dl>
        <p>
            @Html.ActionLink("Editar Historial", "Edit", "HistoriaClinica", new { id = Model.idPaciente })
            |  @Html.ActionLink("Ver Evoluciones", "GetEvoluciones", "Evolucion", new { id = Model.idPaciente })
        </p>
    </div>
}



